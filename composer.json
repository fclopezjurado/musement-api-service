{
    "name": "tui/musement-api-service",
    "version": "0.1.0",
    "description": "TUI Musement API service",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "Fran LÃ³pez",
            "email": "fclopezjurado@gmail.com"
        }
    ],
    "repositories": [
        {
            "type": "vcs", "url": "git@github.com:fclopezjurado/musement-api-client-bundle.git"
        }
    ],
    "require": {
        "php": ">=7.3",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "fclopezjurado/musement-api-client-bundle": "dev-develop",
        "symfony/console": "5.1.*",
        "symfony/dotenv": "5.1.*",
        "symfony/flex": "^1.3.1",
        "symfony/framework-bundle": "5.1.*",
        "symfony/yaml": "5.1.*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "mi-schi/phpmd-extension": "^4.3",
        "phpmd/phpmd": "^2.9",
        "phpstan/phpstan": "^0.12.57",
        "phpunit/phpunit": "^9.4",
        "squizlabs/php_codesniffer": "^3.5",
        "symfony/maker-bundle": "^1.24"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Tui\\Musement\\ApiService\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tui\\Musement\\ApiService\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "lint": [
            "phpcs",
            "php-cs-fixer fix -v --dry-run --using-cache=no --allow-risky=yes",
            "phpmd src text phpmd.xml",
            "phpstan analyse -l 8 src tests"
        ],
        "lint:fix": "php-cs-fixer fix --allow-risky=yes",
        "test:unit": [
            "@php vendor/bin/phpunit --testsuite='Unit Tests'"
        ],
        "test:functional": [
            "@php vendor/bin/phpunit --testsuite='Functional Tests'"
        ],
        "test:all": [
            "@php vendor/bin/phpunit"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.1.*"
        }
    }
}
